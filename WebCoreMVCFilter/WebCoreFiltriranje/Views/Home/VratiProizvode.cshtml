@model IEnumerable<WebCoreFiltriranje.Models.Proizvod>

@{
    ViewData["Title"] = "VratiProizvode";
}

<div class="jumbotron">
    @if (ViewBag.Kategorija != "")
    {
        <h1>@ViewBag.Kategorija</h1>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija.Naziv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProizvodId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProizvodId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProizvodId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
